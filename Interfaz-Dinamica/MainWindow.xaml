<Window x:Class="Interfaz_Dinamica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interfaz_Dinamica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="28,27,0,0" TextWrapping="Wrap" Text="Nuevo" VerticalAlignment="Top" Height="19" Width="60"/>
        <ComboBox x:Name="cbInterfaz_Dinamica" HorizontalAlignment="Left" Margin="137,24,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CbInterfaz_Dinamca_SelectionChanged_1">
            <ComboBoxItem>Alumno</ComboBoxItem>
            <ComboBoxItem>Maestro</ComboBoxItem>
        </ComboBox>
        <Grid x:Name="grdInterfaz" HorizontalAlignment="Left" Height="199" Margin="28,67,0,0" VerticalAlignment="Top" Width="455"/>
        <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="337,25,0,0" VerticalAlignment="Top" Width="75" Click="BtnAgregar_Click"/>
    </Grid>
</Window>
